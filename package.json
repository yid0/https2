{
  "name": "https2",
  "version": "1.0.0",
  "description": "A native nodejs http server with https and http2 protocols support.",
  "author": "yid0",
  "main": "dist/index.js",
  "files": [
    "/dist"
  ],
  "scripts": {
    "clean": "rm -Rf node_modules package-lock.json & npm cache clean -f",
    "prepare": "./scripts/ssl.sh",
    "start:w": "ts-node ./src/index.ts",
    "start:dev": "npm run build && CERTS_PATH=certs NODE_ENV=production node dist/main.js",
    "start:profiler": "npm run build && NODE_ENV=production node --prof dist/main.js",
    "profiler": "node --prof-process isolate-*-v8.log > profiler.log",
    "build": "rm -fr dist && tsc -p tsconfig.json",
    "docker:build": "./scripts/build.sh",
    "docker:start": "./scripts/run.sh",
    "test": "vitest --run",
    "test:coverage": "vitest run --coverage ",
    "bench-http": "./benchmark.sh",
    "bench-http2": "h2load -n100000 -c100 -m100 https://localhost:9443/",
    "compile": "tsc",
    "postbuild": "cp -r ./certs ./scripts/ssl.sh ./scripts/start.sh  ./dist",
    "pretest": "npm run compile",
    "posttest": "npm run lint",
    "lint": "npm run eslint && npm run prettier:check",
    "lint:fix": "npm run eslint:fix && npm run prettier:fix",
    "eslint": "eslint --report-unused-disable-directives",
    "eslint:fix": "npm run eslint -- --fix",
    "prettier:cli": "prettier \"**/*.ts\" \"**/*.js\"",
    "prettier:check": "npm run prettier:cli -- -l",
    "prettier:fix": "npm run prettier:cli -- --write"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@tsconfig/node-lts": "^20.1.1",
    "@types/mime-types": "^2.1.4",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.8.2",
    "@types/node-fetch": "^2.6.11",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-istanbul": "^1.2.1",
    "@vitest/ui": "^1.2.1",
    "autocannon": "^7.15.0",
    "commitlint": "^18.4.4",
    "eslint-plugin-security": "^2.1.0",
    "husky": "^8.0.3",
    "mime-types": "^2.1.35",
    "prettier": "^3.2.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.0",
    "vitest": "^1.2.1"
  },
  "license": "UNLICENSED"
}
